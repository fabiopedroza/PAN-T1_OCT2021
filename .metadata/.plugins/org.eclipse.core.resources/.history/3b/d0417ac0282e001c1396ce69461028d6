package defaul_packge;

import java.util.Scanner;

public class NumeroPrimo {

	public static void main(String[] args) {


		Scanner entrada = new Scanner(System.in);
		System.out.println("Digite numero primo: ");
		int numeroPrimo = entrada.nextInt();
		int contador = 0;

		for( int i = 2; i <= numeroPrimo; ++i){
			if ((numeroPrimo % i == 0) ) {
				contador ++;
			}
			
		}
		
		if(contador > 2) {
			System.out.println("Desculpe, mas o número digitado não é primo.");
		}
		else {
			System.out.println("O número realmente é primo.");
		}


	}
}
